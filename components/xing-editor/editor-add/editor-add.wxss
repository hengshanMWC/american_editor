/* components/xing-editor/editor-add/editor-add.wxss */
.editor-add-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  position: relative;
}

.editor-bottom {
  width: 56rpx;
  height: 56rpx;
}
.editor-add-box-bottom,
.editor-add-box-top {
  background: #fff;
  position: absolute;
  box-sizing: border-box;
  padding: 16rpx 54rpx;
  border-radius: 80rpx;
  display: flex;
  z-index:10;
  box-shadow: 0 5rpx 20rpx #ccc;
}

.editor-add-box-top {
  transform: translateY(-120rpx)
}

.editor-add-box-bottom {
  margin-top: 120rpx;
}
.editor-arrow-bottom,
.editor-arrow-top {
  height: 0;
  border-style: solid;
  position: absolute;
  transform: translateX(160%);
}

.editor-arrow-bottom {
  border-width: 0 30rpx 30rpx;
  border-color: transparent transparent #fff;/*透明 透明  灰*/
  top: -29rpx;
}

.editor-arrow-top {
  border-width: 30rpx 30rpx 0;
  border-color: #fff transparent transparent;/*透明 透明  灰*/
  bottom: -29rpx;
}

.editor-add-box-bottom .editor-box:not(:last-child),
.editor-add-box-top .editor-box:not(:last-child) {
  margin-right: 60rpx
}

.editor-box {
  font-size: 25rpx;
  color: #111;
}

.editor-box text {
  display: block;
  margin-left:-4rpx;
}

.editor-add {
  width: 38rpx;
  height: 32rpx;
  margin-bottom: 10rpx;
}